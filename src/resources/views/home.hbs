<div class="mt-5">
    <div class="row">
        {{#each courses}}
            <div class="col-sm-6 col-lg-4">

                <div class="card card-course-item">
                    <a href="/courses/{{this.slug}}">
                        <img src="..." class="card-img-top" alt="..." /></a>
                    <div class="card-body">
                        <a href="/courses/{{slug}}">
                            <h5 class="card-title">{{this.name}}</h5></a>
                        <p class="card-text">{{this.desc}}</p>
                        <a href="#" class="btn btn-primary">Buy it</a>
                    </div>
                </div>

            </div>
        {{/each}}
    </div>
</div>